<div class="post" data-post-id="<%= post.id.to_base62 %>">
  <%-= Kpbb::Ecr::Component.post_row(ctx, post, thread) -%>
</div>
<%- if children = thread.children?(post)-%>
<div class="reply-tree">
  <%- children.each do |childpost| -%>
    <%-= Kpbb::Ecr::Component.reply_tree(ctx, childpost, thread) -%>
  <%- end -%>
</div>
<%- end -%>
